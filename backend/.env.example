# Environment Configuration Example
# Copy this file to .env in the backend directory and fill in your values

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=5000
NODE_ENV=development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://localhost:27017/ngo_donation
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ngo_donation?retryWrites=true&w=majority

# ==========================================
# JWT CONFIGURATION
# ==========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=30d

# ==========================================
# RAZORPAY PAYMENT GATEWAY
# ==========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ==========================================
# EMAIL CONFIGURATION (Nodemailer)
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password
EMAIL_FROM=NGO Donation Platform <noreply@ngodonation.com>

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# ==========================================
# FRONTEND URL (for CORS)
# ==========================================
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# ==========================================
# ADMIN CONFIGURATION
# ==========================================
ADMIN_EMAIL=admin@ngodonation.com
ADMIN_PASSWORD=change_this_password

# ==========================================
# GOOGLE MAPS API (Optional)
# ==========================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==========================================
# FIREBASE (Optional - for notifications)
# ==========================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ==========================================
# OTHER SETTINGS
# ==========================================
ENABLE_LOGGING=true
LOG_LEVEL=info
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
